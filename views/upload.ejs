<%- include("partials/header.ejs") %>
<body >

  <main class="container d-flex align-items-center justify-content-center"  style="height: 100vh;">
    <div class="home" id="poster-container">
      <div class="row">
        <div class="col">
          <h1>Upload Images</h1>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <form action="/upload" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label class="form-label">Enter your email</label>
              <input type="email" class="form-control" name="email" >
            </div>

            <div class="mb-3">
                <label class="form-label">Choose a file</label>
                <input type="file" class="form-control" name="images" multiple >
              </div>
              <div class="mb-3">
                <label class="form-label">Pick the date of the event</label>
                    <input type="date" class="form-control" name="date" required>
                   
              </div>
              <div>
                <button type="submit" class="btn btn-primary">Upload image</button>
            </div>
        </form>
        </div>
      </div>
      
    </div>
  </main>
    
    

